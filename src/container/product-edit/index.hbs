 <main>

 <section>
    <div class="form">
 <h1 class="form__title">Інформація про товар</h1>
 <form method="POST" action="/product-edit?id={{id}}">
         <div class="form__content">
                  <div class="form__content__row">
               <div class="form__field">
<label for="name" class="form__label">Назва товару:</label>
<input type="name" name="name" class="form__input" value={{ name }}>
      </div>
       <div class="form__field">
<label for="text" class="form__label">Ціна:</label>
<input type="text" name="price" class="form__input" value={{ price }}>
      </div>
        <div class="form__field">
<label for="id" class="form__label">ID:</label>
<input type="id" name="id" class="form__input" disabled value={{ id }}>
      </div>
</div>
      <div class="form__field">
      <label for="description" class="form__label">Короткий опис товару:</label>
<input type="description" name="description" class="form__input in__d" value={{ description }}>
      </div>
         </div>
         <label for="description" class="form__label__d">Відображається у картці товару</label>
          <div class="button">
      <button class="form__button__save" type="submit"  >Зберегти оновлення</button>
  <button class="form__button" href="/product-delete"  >Видалити товар</button>
  </div>
  </div>
  </form>
  </div>
  </section>

</main>