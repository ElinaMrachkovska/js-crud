<main class="main">
  {{>heading title="Інформація про замовлення"}}
  
      {{#if data.isEmpty}}
    <p>Список замовлень порожній</p>
  {{else}}
  {{!-- {{#with data.purchase}} --}}
  <section class="order-info">
  <table>
     <tbody>
      <tr>
        <td><b>ID:</b> {{data.purchase.id}} </td>
      <td> </td>
      </tr>
          <tr>
