<main class="main">

   {{>heading title="Мої замовлення"}}

 
    {{#if data.isEmpty}}
    <p>Список замовлень порожній.</p>
  {{else}}
  <section class="order-list">

    <table>
 
         {{#each data.list}}
     

    
      <thead>
        <tr>
          <th>ID:{{id}}</th>
          <th>Товари</th>
          <th>Сума замовлення</th>
          <th>Нараховані бонуси</th>
        </tr>
      </thead>
      <tbody>

          <tr>
              <td ></td>        
            <td>{{title}}</td>
            
            <td>{{totalPrice}}</td>
            
            <td>{{bonus}}</td>
          
          </tr>
        
     
        
      </tbody>
        
    </table>
    
  </section>



<a href="/purchase-info?id={{id}}">
        {{> button text="Оформити"}}
      </a>
   {{/each}}
     {{/if}}
        </main>
