<main>
  <section>
        <div class="form">
      <h1 class="form__create"> Створення товару</h1>
  <h1 class="form__title">
    Інформація про товар
  </h1>
  <form method="POST" action="/product-create">
    <div class="form__content">
       <div class="form__field__grid">
      <div class="form__field">       
<label for="name" class="form__label">Назва товару</label>
<input type="name" name="name" class="form__input">
      </div>
      <div class="form__field">
<label for="price" class="form__label">Ціна</label>
<input type="price" name="price" class="form__input">
      </div>
      </div>
         <div class="form__field">
<label for="description" class="form__label">Короткий опис товару</label>
<input type="description" name="description" class="form__input">
<p>Відображається у картці товару</p>
      </div>
      <button class="form__button">Створити товар</button>
</div>
  </form>
  
        </div>

  </section>

  <section>
    <div class="form">
    <form method="GET" action="/deleteById">
      <h1 class="form__title"> Список товарів</h1>
      <div class="product-list">
        {{#with data.products}}
        {{#if isEmpty}}
        <mark> Список пустий</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>{{name}} | {{price}} | {{id}} <a href="/product-delete?id={{id}}">(Видалити)</a></li>
          {{/each}}
        </ul>
      {{/if}}
        {{/with}}
        </div>
        </div>
        </section>

  </section>

  <section>
    <div class="form">
 <h1 class="form__title">Редагувати продукт</h1>
 <form method="POST" action="/updateById">
         <div class="form__content">
        <div class="form__field">
<label for="id" class="form__label">ID:</label>
<input type="id" name="id" class="form__input">
      </div>
      <div class="form__field">
<label for="name" class="form__label">Назва товару:</label>
<input type="name" name="name" class="form__input">
      </div>
         <div class="form__field">
<label for="text" class="form__label">Ціна:</label>
<input type="text" name="text" class="form__input">
      </div>
      <div class="form__field">
      <label for="description" class="form__label">Короткий опис товару:</label>
<input type="description" name="description" class="form__input in__d">
      </div>
      <button class="form__button" >Оновити</button>
  </div>
  </form>
  </div>
  </section>
</main>
